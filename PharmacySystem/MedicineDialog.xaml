<Window x:Class="PharmacySystem.MedicineDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование лекарства" 
        Height="624" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,15,0,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Данные лекарства" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Название -->
        <Label Grid.Row="1" Content="Название:"/>
        <TextBox x:Name="txtName" Grid.Row="2"/>

        <!-- Производитель -->
        <Label Grid.Row="3" Content="Производитель:"/>
        <TextBox x:Name="txtManufacturer" Grid.Row="4"/>

        <!-- Форма выпуска -->
        <Label Grid.Row="5" Content="Форма выпуска:"/>
        <ComboBox x:Name="cmbForm" Grid.Row="6">
            <ComboBoxItem>Таблетки</ComboBoxItem>
            <ComboBoxItem>Капсулы</ComboBoxItem>
            <ComboBoxItem>Спрей</ComboBoxItem>
            <ComboBoxItem>Сироп</ComboBoxItem>
            <ComboBoxItem>Мазь</ComboBoxItem>
            <ComboBoxItem>Раствор</ComboBoxItem>
        </ComboBox>

        <!-- Цена -->
        <Label Grid.Row="7" Content="Цена (руб.):"/>
        <TextBox x:Name="txtPrice" Grid.Row="8"/>

        <!-- Количество -->
        <Label Grid.Row="9" Content="Количество:"/>
        <TextBox x:Name="txtQuantity" Grid.Row="10"/>

        <!-- Срок годности -->
        <Label Grid.Row="11" Content="Срок годности:"/>
        <DatePicker x:Name="dpExpiryDate" Grid.Row="12"/>

        <!-- Рецептурный -->
        <CheckBox x:Name="chkPrescription" Grid.Row="13" Content="Рецептурный препарат"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="14" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Click="SaveButton_Click" Background="#4CAF50" Foreground="White"/>
            <Button Content="Отмена" Click="CancelButton_Click" Background="#F44336" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>